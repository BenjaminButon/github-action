{
  "name": "learn-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint '*/**/*.{js,ts,tsx,jsx}'",
    "lint-fix": "eslint --fix",
    "prettier-format": "prettier --write",
    "stylelint": "stylelint ./src/**/*.{css,scss,sass,less}",
    "test": "jest",
    "generate": "plop",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@linkup/eslint-config-next-js": "github:LinkUpStudio/eslint-config-next-js.git#v1.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "lint-staged": "^10.5.4",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "stylelint": "^13.12.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run prettier-format",
      "npm run lint-fix"
    ],
    "*.{css,scss,sass,less}": [
      "npm run prettier-format",
      "npm run stylelint"
    ]
  }
}
